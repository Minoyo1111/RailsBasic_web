<div class="col-md-12">
  <div class="moviegroup">
    <%= link_to("New moviegroup", new_moviegroup_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Creator </td>
      </tr>
    </thead>
    <tbody>
      <% @moviegroups.each do |moviegroup| %>
        <tr>
          <td>#</td>
          <td><%= link_to(moviegroup.title, moviegroup_path(moviegroup)) %></td>
          <td><%= moviegroup.description %></td>
          <td> <%= moviegroup.user.email %> </td>
          <td>
            <% if current_user && current_user == moviegroup.user %>
              <%= link_to("Edit", edit_moviegroup_path(moviegroup), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", moviegroup_path(moviegroup),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
