<div class="col-md-12">
  <div class="moviegroup">
    <%= link_to("Write a Post", new_moviegroup_post_path(@moviegroup), class: "btn btn-default pull-right")%>
  <% if current_user && current_user == @moviegroup.user %>
    <%= link_to("Edit", edit_moviegroup_path(@moviegroup), class: "btn btn-primary pull-right")%>
  <% end %>
  </div>
  <h2><%= @moviegroup.title %></h2>
  <p><%= @moviegroup.description %></p>
  <table class="table">
    <thead>
      <tr>
        <th>電影評論內容</th>
        <th>作者</th>
        <th>評論時間</th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>